{
  "name": "microservice-generator",
  "version": "0.0.1",
  "description": "An opinionated generator for Swagger based Rest API servers",
  "main": "src/index.js",
  "bin": {
    "ms-new": "NODE_PATH=. node src/"
  },
  "files": [
    "src/**/*.js",
    "CONTRIBUTING.md"
  ],
  "engines": {
    "node": ">= 10.15.1"
  },
  "scripts": {
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --single-quote --no-semi --write '**/*.{js,json}'",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test NODE_PATH=. mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:unit:cov": "NODE_ENV=test NODE_PATH=. nyc mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:mutants": "NODE_ENV=test NODE_PATH=. npx stryker run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davesag/microservice-generator.git"
  },
  "author": "Dave Sag <davesag@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davesag/microservice-generator/issues"
  },
  "homepage": "https://github.com/davesag/microservice-generator#readme",
  "keywords": [
    "ampq",
    "api",
    "cli",
    "docker",
    "generator",
    "postgres",
    "rabbitmq",
    "rest",
    "sequelize",
    "swagger",
    "templates"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,json}": [
        "prettier --single-quote --no-semi --write",
        "git add"
      ]
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "devDependencies": {
    "@stryker-mutator/core": "^2.0.0",
    "@stryker-mutator/javascript-mutator": "^2.0.0",
    "@stryker-mutator/mocha-framework": "^2.0.0",
    "@stryker-mutator/mocha-runner": "^2.0.0",
    "ajv": "^6.10.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.0",
    "lint-staged": "^8.2.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "traverse-folders": "^1.1.0",
    "yamljs": "^0.3.0"
  }
}
