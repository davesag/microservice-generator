{
  "name": "microservice-generator",
  "version": "1.0.0",
  "description": "An opinionated generator for Swagger based Rest API servers",
  "main": "src/index.js",
  "bin": {
    "ms-new": "NODE_PATH=. node src/"
  },
  "scripts": {
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --single-quote --no-semi --write '**/*.{js,json}'",
    "test": "find ./test/unit -name '*spec.js' | NODE_ENV=test NODE_PATH=. xargs mocha --require ./test/unit/test_helper.js",
    "test:coverage": "find ./test/unit -name '*spec.js' | NODE_ENV=test NODE_PATH=. xargs nyc mocha --require ./test/unit/test_helper.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davesag/microservice-generator.git"
  },
  "author": "Dave Sag <davesag@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davesag/microservice-generator/issues"
  },
  "homepage": "https://github.com/davesag/microservice-generator#readme",
  "keywords": [
    "ampq",
    "api",
    "cli",
    "docker",
    "generator",
    "postgres",
    "rabbitmq",
    "rest",
    "sequelize",
    "swagger",
    "templates"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,json}": [
        "prettier --single-quote --no-semi --write",
        "git add"
      ]
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "devDependencies": {
    "ajv": "^6.5.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-mocha": "^5.1.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.1.3",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.0",
    "proxyquire": "^2.1.0",
    "sinon": "^6.1.4",
    "sinon-chai": "^3.1.0"
  },
  "dependencies": {
    "commander": "^2.17.1",
    "traverse-folders": "^1.0.0",
    "yamljs": "^0.3.0"
  }
}
