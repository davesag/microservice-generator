{
  "name": "microservice-generator",
  "version": "0.0.1",
  "description": "An opinionated generator for Swagger based Rest API servers",
  "main": "src/index.js",
  "bin": {
    "ms-new": "NODE_PATH=. node src/"
  },
  "files": [
    "src/**/*.js",
    "CONTRIBUTING.md"
  ],
  "engines": {
    "node": ">= 10.15.1"
  },
  "scripts": {
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*.{js,json,md}'",
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test NODE_PATH=. mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:unit:cov": "NODE_ENV=test NODE_PATH=. nyc mocha ./test/unit/ --require ./test/unitTestHelper.js --recursive",
    "test:mutants": "NODE_ENV=test NODE_PATH=. npx stryker run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davesag/microservice-generator.git"
  },
  "author": "Dave Sag <davesag@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davesag/microservice-generator/issues"
  },
  "homepage": "https://github.com/davesag/microservice-generator#readme",
  "keywords": [
    "ampq",
    "api",
    "cli",
    "docker",
    "generator",
    "postgres",
    "rabbitmq",
    "rest",
    "sequelize",
    "swagger",
    "templates"
  ],
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/index.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "devDependencies": {
    "@stryker-mutator/core": "^2.2.1",
    "@stryker-mutator/javascript-mutator": "^2.2.1",
    "@stryker-mutator/mocha-framework": "^2.2.1",
    "@stryker-mutator/mocha-runner": "^2.2.1",
    "ajv": "^6.10.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-mocha": "^6.2.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "proxyquire": "^2.1.3",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0"
  },
  "dependencies": {
    "commander": "^4.0.0",
    "traverse-folders": "^1.1.0",
    "yamljs": "^0.3.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "never"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
